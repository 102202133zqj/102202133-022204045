.container {
  padding: 40px; /* 增加 padding */
}

.main {
  background-color: #fff;
  border-radius: 8px;
  padding: 40px; /* 增加 padding */
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 30px; /* 增加 margin-bottom */
}

.form-item {
  margin-bottom: 30px; /* 增加 margin-bottom */
}

label {
  display: block;
  font-size: 16px;
  margin-bottom: 10px; /* 增加 margin-bottom */
}

input, textarea {
  width: 100%;
  padding: 15px; /* 增加 padding */
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 16px;
}

button {
  width: 100%;
  padding: 15px; /* 增加 padding */
  background-color: #07C160;
  color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 16px;
}
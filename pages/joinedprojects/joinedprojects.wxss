}

.project-info {
    background-color: #fff;
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.project-title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
}

.project-detail {
    margin-bottom: 20px;
}


/* index.wxss */
.container {
  padding: 20px;
}

.search-bar {
  display: flex;
  margin-bottom: 20px;
}

.search-input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.search-button {
  margin-left: 10px;
  padding: 10px 20px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
}

.publish-button-container {
  margin-bottom: 20px;
}

.publish-button {
  width: 100%;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
}

.main {
  margin-top: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.project-item {
  margin-bottom: 20px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.project-title {
  font-size: 18px;
  font-weight: bold;
}

.project-description {

  font-size: 14px;
  margin-top: 5px;
}

.detail-button {
  margin-top: 10px;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
  width: 100%;
  text-align: center;

  font-size: 16px;
  color: #666;
}

.publish-button-container {
    display: flex;
    justify-content: center; /* 水平居中 */
    align-items: center; /* 垂直居中 */
    height: 100px; /* 根据需要调整高度 */
    margin-top: 70px; /* 增加顶部外边距 */
}

.publish-button {
    width: 200px; /* 按钮宽度 */
    padding: 15px 0; /* 按钮内边距 */
    background-color: #1aad19; /* 按钮背景颜色 */
    color: white; /* 文字颜色 */
    border: none; /* 无边框 */
    border-radius: 4px; /* 圆角边框 */
    font-size: 16px; /* 文字大小 */

}
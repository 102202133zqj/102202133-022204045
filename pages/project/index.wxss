/* index.wxss */
.container {
  padding: 20px;
}

.main {
  margin: 0 auto;
  max-width: 600px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.section {
  margin-bottom: 20px;
}

.section-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.project-item {
  margin-bottom: 20px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.project-title {
  font-size: 18px;
  font-weight: bold;
}

.project-description {
  font-size: 14px;
  margin-bottom: 10px;
}

.project-button, .admin-button {
  margin-top: 10px;
  background-color: #007aff;
  color: white;
  padding: 10px;
  border-radius: 5px;
  display: block;
  width: 100%;
  text-align: center;
}